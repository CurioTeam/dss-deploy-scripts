#!/usr/bin/env bash
set -ex

export ETH_GAS=${ETH_GAS:-"7000000"}

export CONFIG_STEP=${CONFIG_STEP:-"4"}
CONFIG_FILE="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )/step-$CONFIG_STEP.json"

# shellcheck source=/dev/null
./step-1-deploy

# shellcheck source=/dev/null
. load-addresses

# Debt Ceiling = 10000 DAI
CEILING=$(seth --to-uint256 "$(seth --to-wei 10000 ETH)")

# Set general debt ceiling
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,uint256)' "$MCD_PIT" "$(seth --to-bytes32 "$(seth --from-ascii "Line")")" "$CEILING")"

ilks=$(jq ".ilks | keys_unsorted[]" "$CONFIG_FILE" | sed 's/"//g' )
for ilk in $ilks; do
    # Set Collateral debt ceiling
    seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_PIT" "$(seth --to-bytes32 "$(seth --from-ascii "$ilk")")" "$(seth --to-bytes32 "$(seth --from-ascii "line")")" "$CEILING")"
    # Set Collateral mat
    mat=$(jq ".ilks.${ilk} | .mat" "$CONFIG_FILE" | sed 's/"//g' )
    mat=$(echo "$mat * 10 ^ 7" | bc -l)
    seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_SPOT" "$(seth --to-bytes32 "$(seth --from-ascii "$ilk")")" "$(seth --to-bytes32 "$(seth --from-ascii "mat")")" "$(seth --to-uint256 "$(seth --to-wei "$mat" ETH)")")"
    # If it is a value set the price
    type=$(jq ".ilks.${ilk} | .pip | .type" "$CONFIG_FILE" | sed 's/"//g' )
    if [ "${type}" = "value" ]; then
        price=$(jq ".ilks.${ilk} | .pip | .price" "$CONFIG_FILE" | sed 's/"//g' )
        ./update-price "$ilk" "$price"
    fi
done

echo "STEP 4 COMPLETED SUCCESSFULLY"
