#!/usr/bin/env bash
set -ex

export CONFIG_STEP=${CONFIG_STEP:-"4"}
# shellcheck source=/dev/null
. step-1-deploy

# Debt Ceiling = 10000 DAI
CEILING=$(seth --to-uint256 "$(seth --to-wei 10000 ETH)")

# Set general debt ceiling
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,uint256)' "$MCD_PIT" "$(seth --to-bytes32 "$(seth --from-ascii "Line")")" "$CEILING")"

# Set ETH debt ceiling
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_PIT" "$(seth --to-bytes32 "$(seth --from-ascii "ETH")")" "$(seth --to-bytes32 "$(seth --from-ascii "line")")" "$CEILING")"

# Set REP debt ceiling
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_PIT" "$(seth --to-bytes32 "$(seth --from-ascii "REP")")" "$(seth --to-bytes32 "$(seth --from-ascii "line")")" "$CEILING")"

# Set ETH mat (150%)
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_SPOT" "$(seth --to-bytes32 "$(seth --from-ascii "ETH")")" "$(seth --to-bytes32 "$(seth --from-ascii "mat")")" "$(seth --to-uint256 "$(seth --to-wei 1500000000 ETH)")")"

# Set REP mat (180%)
seth send "$MCD_MOM" 'execute(address,bytes memory)' "$MCD_MOM_LIB" "$(seth calldata 'file(address,bytes32,bytes32,uint256)' "$MCD_SPOT" "$(seth --to-bytes32 "$(seth --from-ascii "REP")")" "$(seth --to-bytes32 "$(seth --from-ascii "mat")")" "$(seth --to-uint256 "$(seth --to-wei 1800000000 ETH)")")"

# Set ETH price, poke OSM (if exists) and poke Spotter
./update-price "ETH" "150"

# Set REP price, poke OSM (if exists) and poke Spotter
./update-price "REP" "15"

echo "STEP 4 COMPLETED SUCCESSFULLY"
