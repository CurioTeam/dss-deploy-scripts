#!/usr/bin/env bash

# Get config variables
export CONFIG_STEP=${CONFIG_STEP:-"step-3"}
# shellcheck source=lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/lib"&&pwd)}/common.sh" "step-3"

"$BIN_DIR"/step-1-deploy

"$BIN_DIR"/poll-deploy

"$LIBEXEC_DIR"/set-ilks-spell-line

if [ "$CONFIG_STEP" = "step-3" ]; then
    "$LIBEXEC_DIR"/set-pause-delay
fi

echo "STEP 3 COMPLETED SUCCESSFULLY"
