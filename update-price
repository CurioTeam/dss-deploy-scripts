#!/usr/bin/env bash
set -ex

# shellcheck source=/dev/null
. load-addresses

# Set DSValue price
eval seth send "\$VAL_${1} 'poke(bytes32)' $(seth --to-uint256 "$(seth --to-wei "$2" ETH)")"

if [ "$(eval echo "\$PIP_${1}")" != "$(eval echo "\$VAL_${1}")" ]; then
    # Poke OSM
    eval seth send "\$PIP_${1} 'poke()'"
fi

# Poke Spotter
seth send "$MCD_SPOT" 'poke(bytes32)' "$(seth --to-bytes32 "$(seth --from-ascii "$1")")"
